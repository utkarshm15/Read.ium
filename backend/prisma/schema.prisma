generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id String @id @default(uuid())
  email String @unique 
  password String
  firstName String
  lastName String
  blogs Blogs[]
}

model Blogs{
  id String @id @default(uuid())
  author_id String
  title String
  content String
  created_at DateTime @default(now())
  published Boolean @default(false)
  author Users @relation(fields: [author_id], references: [id])
}
